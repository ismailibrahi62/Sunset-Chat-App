<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfile1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            app:civ_border_color="@color/black"
            android:src="@drawable/profile3"
            app:civ_border_width="2dp"/>




        <EditText
            android:id="@+id/edUserName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textColorHint="@color/orange"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:background="@drawable/ed_search"
            android:layout_below="@id/userProfile1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:inputType="text"
            android:drawableStart="@drawable/person2"
            android:paddingStart="10dp"
            android:hint="badal magac isticmalkaga"
            android:drawablePadding="20dp"/>

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/ed_search"
            android:layout_below="@id/edUserName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/email2"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:drawablePadding="20dp"/>

        <EditText
            android:id="@+id/edBio"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textColorHint="@color/orange"
            android:textSize="15sp"
            android:background="@drawable/ed_search"
            android:layout_below="@id/edUserName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/bio"
            android:paddingStart="10dp"
            android:inputType="text"
            android:hint="badal qoraalka aad keheshid"
            android:drawablePadding="20dp"/>




        <Button
            android:id="@+id/update"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_bg"
            android:layout_below="@id/edBio"
            android:layout_marginTop="80dp"
            android:text="Badal"
            android:textColor="@color/orange"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"/>


        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/primary"/>

    </RelativeLayout>
</layout>