<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Soo Gali Profile"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_below="@id/addProfile"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/orange"
                android:text="Fadlan soo gali profile sawirkaga"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/selectProfileTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@id/select"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Dooro Profile:"
                android:textStyle="bold|italic"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgSelectedProfile"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_below="@id/selectProfileTxt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="3dp"
                android:src="@drawable/select_profile_image"
                />


            <TextView
                android:id="@+id/enterYourNm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_below="@id/imgSelectedProfile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="Geli qoraal Aad Ka heshid:"
                android:textStyle="bold|italic"/>

            <EditText
                android:id="@+id/edittext_userName"
                android:layout_width="340dp"
                android:layout_below="@id/enterYourNm"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/bio"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:drawablePadding="20dp"
                android:hint="gel qoraal kaheshid"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textColorHint="@color/orange"
                />

            <Button
                android:id="@+id/btn_sumbit"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@id/edittext_userName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/orange"
                android:text="Hagaag"
                android:textAllCaps="false"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateTint="@color/primary"/>

        </RelativeLayout>
    </ScrollView>
</layout>